@model CPATCMSApp.Models.ViewModels.AssignmentViewModel

@{
    ViewData["Title"] = "Create";
    string today = DateTime.Now.ToShortDateString();
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Add Attachment</h3>
                </div>
                <div class="col text-right">
                    <a asp-controller="CnFProfiles" asp-action="CnfAssignments" class="btn btn-back">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form enctype="multipart/form-data" asp-action="AttachCnfFiles">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AssignmenItemtId" value="@ViewBag.AssignmentItem.Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Release Order</label>
                            @if (ViewBag.AssignmentItem.ReleaseOrder == "No File" || ViewBag.AssignmentItem.ReleaseOrder == null)
                            {
                                <input type="file" asp-for="ReleaseOrder" id="file1" lang="en" />
                            }
                            else
                            {
                                <a data-toggle="popover" data-content="Download" class="btn btn-success btn-sm" href="/files/cnfFiles/@ViewBag.AssignmentItem.ReleaseOrder" download="@ViewBag.AssignmentItem.ReleaseOrder"><i class="fa fa-download mr-2"></i>Download</a>
                                <input type="file" asp-for="ReleaseOrder" id="file1" lang="en" />
                            }


                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Cart Ticket</label>

                            @if (ViewBag.AssignmentItem.CartTicket == "No File" || ViewBag.AssignmentItem.CartTicket == null)
                            {
                                <input type="file" asp-for="CartTicket" id="file2" lang="en" />
                            }
                            else
                            {
                                <a data-toggle="popover" data-content="Download" class="btn btn-success btn-sm" href="/files/cnfFiles/@ViewBag.AssignmentItem.CartTicket" download="@ViewBag.AssignmentItem.CartTicket"><i class="fa fa-download mr-2"></i>Download</a>
                                <input type="file" asp-for="CartTicket" id="file2" lang="en" />
                            }

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Bill of Entry</label>

                            @if (ViewBag.AssignmentItem.BillOfEntity == "No File" || ViewBag.AssignmentItem.BillOfEntity == null)
                            {
                                <input type="file" asp-for="BillOfEntity" id="file3" lang="en" />
                            }
                            else
                            {
                                <a data-toggle="popover" data-content="Download" class="btn btn-success btn-sm" href="/files/cnfFiles/@ViewBag.AssignmentItem.BillOfEntity" download="@ViewBag.AssignmentItem.BillOfEntity"><i class="fa fa-download mr-2"></i>Download</a>
                                <input type="file" asp-for="BillOfEntity" id="file3" lang="en" />
                            }


                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Assesment Notice</label>

                            @if (ViewBag.AssignmentItem.AssesmentNotice == "No File" || ViewBag.AssignmentItem.AssesmentNotice == null)
                            {
                                <input type="file" asp-for="AssesmentNotice" id="file4" lang="en" />
                            }
                            else
                            {
                                <a data-toggle="popover" data-content="Download" class="btn btn-success btn-sm" href="/files/cnfFiles/@ViewBag.AssignmentItem.AssesmentNotice" download="@ViewBag.AssignmentItem.AssesmentNotice"><i class="fa fa-download mr-2"></i>Download</a>
                                <input type="file" asp-for="AssesmentNotice" id="file4" lang="en" />
                            }


                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">One Stop Bill</label>
                            @if (ViewBag.AssignmentItem.OneStopBill == "No File" || ViewBag.AssignmentItem.OneStopBill == null)
                            {
                                <input type="file" asp-for="OneStopBill" id="file5" lang="en" />
                            }
                            else
                            {
                                <a data-toggle="popover" data-content="Download" class="btn btn-success btn-sm" href="/files/cnfFiles/@ViewBag.AssignmentItem.OneStopBill" download="@ViewBag.AssignmentItem.OneStopBill"><i class="fa fa-download mr-2"></i>Download</a>
                                <input type="file" asp-for="OneStopBill" id="file5" lang="en" />
                            }



                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Container Scan Copy</label>


                            @if (ViewBag.AssignmentItem.ContainerScanCopy == "No File" || ViewBag.AssignmentItem.ContainerScanCopy == null)
                            {
                                <input type="file" asp-for="ContainerScanCopy" id="file6" lang="en" />
                            }
                            else
                            {
                                <a data-toggle="popover" data-content="Download" class="btn btn-success btn-sm" href="/files/cnfFiles/@ViewBag.AssignmentItem.ContainerScanCopy" download="@ViewBag.AssignmentItem.ContainerScanCopy"><i class="fa fa-download mr-2"></i>Download</a>
                                <input type="file" asp-for="ContainerScanCopy" id="file6" lang="en" />
                            }
                        </div>
                    </div>


                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    <script>
        var url = window.location;

        var initial_url = $(location).attr('href');
        var splitted_url = initial_url.split('/');
        var updated_url2 = document.location.origin + '/' + 'CnFProfiles' + '/CnfAssignments';

        $('.nav_level0 a.nav-link').filter(function () {
            return this.href == updated_url2;
        }).parent().addClass('nav-color-active');
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
