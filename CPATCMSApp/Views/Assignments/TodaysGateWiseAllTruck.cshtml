@model IEnumerable<CPATCMSApp.Models.Assignments.Assignment>

@{
    ViewData["Title"] = "Todays's Trucks";
}

@section Css {
    @{await Html.RenderPartialAsync("_DatatableCssPartial");}
}

@section Sole {
    <style>
        table thead th:last-child {
            width: 100px;
        }

        .table {
            border-left: 0;
            border-right: 0;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col">
            <div class="card animated fadeIn">
                <div class="card-header p-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Todays's Trucks</h3>
                        </div>
                       

                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-items-center table-hover table-striped table-bordered" id="datatable-basic">
                            <thead class="thead-light">
                                <tr>
                                    <th>SL</th>

                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Slot
                                    </th>
                                    <th class="text-center">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int sl = 0;}
                                @foreach (var item in Model)
                                {
                                    sl++;
                                    <tr>
                                        <td>@sl</td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AssignmentSlot.AssignmentName)
                                        </td>
                                        <td class="text-center">
                                          
                                                <div class="btn-group">
                                                    <a class="btn btn-greenyellow btn-sm" asp-action="ViewTrucksAll" asp-route-id="@item.Id"> <i class="far fa-eye mr-1"></i> View</a>
                                                </div>
                                           
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_DatatableJsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}