@model IEnumerable<CPATCMSApp.Models.Currency.Payment>

@{
    ViewData["Title"] = "Recharge History";
}

@section Css {
    @{await Html.RenderPartialAsync("_DataTableCssPartial");}
}

@section Sole {
    <style>

        .table tr th:first-child {
            width: 30px;
        }

        .table tr th:last-child {
            width: 50px;
        }

        .table tr th {
            text-align: center;
        }
