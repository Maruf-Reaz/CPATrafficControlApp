@model CPATCMSApp.Models.Currency.Payment

@{
    ViewData["Title"] = "Make Payment";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Make Payment</h3>
                </div>
                <div class="col text-right">
                    <a asp-action="Index" class="btn btn-back">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Payment Method</label>
                            <select asp-for="PaymentMethodId" class="form-control" data-toggle="select" asp-items="ViewBag.PaymentMethodId"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">C&amp;F Profile</label>
                            <select asp-for="CnFProfileId" class="form-control" data-toggle="select" asp-items="ViewBag.CnFProfileId"></select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="control-label">Verification Code</label>
                            <input asp-for="VerificationCode" class="form-control" />
                            <span asp-validation-for="VerificationCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="control-label">Reference Code</label>
                            <input asp-for="ReferenceCode" class="form-control" />
                            <span asp-validation-for="ReferenceCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/select2/select2.min.js" asp-append-version="true"></script>

    <script>
        var url = window.location;

        var initial_url = $(location).attr('href');
        var splitted_url = initial_url.split('/');
        var updated_url2 = document.location.origin + '/' + splitted_url[3] + '/' + splitted_url[4];

        $('.nav_level0 a.nav-link').filter(function () {
            return this.href == updated_url2;
        }).parent().addClass('nav-color-active');
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}