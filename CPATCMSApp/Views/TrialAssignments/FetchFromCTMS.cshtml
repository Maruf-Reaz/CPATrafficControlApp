@{
    ViewData["Title"] = "Fetch From CTMS";
}

@section Sole {
    <style>
        .fetch {
            padding-top: 8px;
            padding-bottom: 7px;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card animated fadeIn overflow-hidden">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">@ViewData["Title"]</h3>
                </div>
                <div class="col text-right">
                    <button onclick="window.history.go(-1); return false;" class="btn btn-sm btn-neutral btn-back">Back</button>
                </div>
            </div>
        </div>
        <form method="post" asp-action="FetchFromCTMS">
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input class="form-control datepicker2" placeholder="Pick a Date..." name="AssignmentDate" autocomplete="off" />
                            <div class="input-group-append">
                                <button class="btn btn-primary fetch" type="submit">Fetch</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-none position-absolute" id="loader-sms" style="left: 0;right: 0;top: 0;bottom: 0;background:rgba(255, 255, 255, 0.7);">
    <img class="position-fixed" src="~/asset/img/Ajax_loader_metal_512.gif" alt="loading..." style="left: 50%;right: 50%;top: 50%;width: 50px;bottom: 50%;" />
</div>

@section Scripts {
    <script src="~/vendor/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $(".datepicker2").datepicker({
            format: "yyyy-mm-dd",
            disableTouchKeyboard: !0,
            autoclose: !0,
            todayHighlight: !0
        });

        $('.fetch').click(function () {
            $("#loader-sms").addClass("d-block").removeClass("d-none");
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}